{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist/lib",
    "declarationDir": "./dist/types"
  }
}
